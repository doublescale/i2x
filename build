#!/bin/bash

set -e

mkdir -p obj bin

extra_opts=''

if [ ${OPTIMIZE:-0} -ne 0 ]; then
  extra_opts='-O3'
fi

if [ ${FULL_REBUILD:-0} -ne 0 -o ! -e obj/stb.o ]; then
  echo "Building obj/stb.o"
  clang -std=c11 -O3 -c -o obj/stb.o lib/stb.c
fi

clang -g $extra_opts -std=c11 -Wshadow -pthread -I. -lm -lX11 -lGL -lGLX -lXi -o i2x obj/stb.o src/main.c
